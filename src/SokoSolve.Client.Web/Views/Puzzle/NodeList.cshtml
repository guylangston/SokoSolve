@using TextRenderZ.Reporting
@using SokoSolve.Core.Solver
@model System.Collections.Generic.IEnumerable<SokoSolve.Core.Solver.SolverNode>


@{
    MapToReporting.Create<SolverNode>()
                  .AddColumn("SolverNodeId", x=>x.SolverNodeId)
                  .AddColumn("Hash", x=>((uint) x.GetHashCode()).ToString("x8"))
                  .AddColumn("Parent", x=>x.Parent?.SolverNodeId)
                  .AddColumn("Status", x=>x.Status)
                  .AddColumn("CrateMap", x=>x.CrateMap.GetHashCode())
                  .AddColumn("MoveMap", x=>x.MoveMap.GetHashCode())
                  .AddColumn("PlayerBefore", x=>x.PlayerBefore)
                  .AddColumn("PlayerAfter", x=>x.PlayerAfter)
                  .AddColumn("Push", x=>x.Push)
                  .AddColumn("CrateBefore", x=>x.CrateBefore)
                  .AddColumn("CrateAfter", x=>x.CrateAfter)
                  .AddColumn("HasChildren", x=>x.HasChildren)
                  .RenderTo(Model.OrderBy(x=>x.GetHashCode()), new MapToReportingRendererHtml(), Output);
}
